{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "react": ["node_modules/react"],
      "remini": ["src"],
      "remini/react": ["react/src"],
      "remini/preact": ["preact/src"],
      "remini/hooks-bindings": ["hooks-bindings/src"]
    },
  },
  "include": ["tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules"]
}
